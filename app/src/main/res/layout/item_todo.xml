<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_todo_item_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_64_dp"
    android:paddingHorizontal="@dimen/size_24_dp"
    android:layout_marginVertical="@dimen/size_6_dp"
    android:layout_marginHorizontal="@dimen/size_24_dp"
    android:background="@drawable/todo_item_background">

    <TextView
        android:id="@+id/tv_todo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="підфіксити доку раціон харчування, підфікс аввпп привіт здоровки"
        android:textAlignment="center"
        android:textSize="@dimen/todo_item_text_size"
        android:fontFamily="@font/montserrat_medium"
        android:maxLines="2"
        android:ellipsize="end"

        android:textColor="?attr/colorOnSecondary"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>