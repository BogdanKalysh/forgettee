<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/container_task_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/size_32_dp"
    android:layout_marginHorizontal="@dimen/size_24_dp"
    android:layout_marginTop="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tv_task_text"
        tools:text="- підфіксити доку раціон"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/archive_todo_item_text_size"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginEnd="@dimen/size_16_dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/container_completion_time"/>

    <FrameLayout
        android:id="@+id/container_completion_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_24_dp"
        android:background="@drawable/chip_days_background"
        android:paddingHorizontal="@dimen/size_8_dp"
        android:layout_marginEnd="@dimen/size_8_dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_context_menu_item">
        <TextView
            android:id="@+id/tv_completion_time"
            tools:text="00:00"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/day_count_chip_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/time_chip_size"
            android:layout_gravity="center"/>
    </FrameLayout>

    <ImageButton
        android:id="@+id/btn_context_menu_item"
        android:layout_width="@dimen/size_32_dp"
        android:layout_height="@dimen/size_32_dp"
        android:src="@drawable/icn_dots"
        app:tint="?attr/colorOnPrimary"
        android:background="@drawable/image_button_ripple"
        android:contentDescription="@string/delete_todo_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>