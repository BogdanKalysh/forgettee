<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/size_24_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_week_separator"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8_dp">
        <FrameLayout
            android:id="@+id/line_week_separator_left"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/colorOnPrimary"
            android:layout_marginEnd="@dimen/size_6_dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_week_separator_text" />
        <TextView
            android:id="@+id/tv_week_separator_text"
            tools:text="26 Jan - 20 Jan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/week_separator_text_size"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <FrameLayout
            android:id="@+id/line_week_separator_right"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/colorOnPrimary"
            android:layout_marginStart="@dimen/size_6_dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_week_separator_text"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_day_separator"
        tools:text="26 Jan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8_dp"
        android:textSize="@dimen/day_separator_text_size"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/theme_red"
        app:layout_constraintTop_toBottomOf="@id/container_week_separator"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_task_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/size_32_dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_day_separator">

        <TextView
            android:id="@+id/tv_task_text"
            tools:text="- підфіксити доку раціон харчування, підфікс аввпп привіт здоровки"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/archive_todo_item_text_size"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginEnd="@dimen/size_16_dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/container_day_count"/>

        <FrameLayout
            android:id="@+id/container_day_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_24_dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/chip_days_background"
            android:paddingHorizontal="@dimen/size_8_dp"
            android:layout_marginEnd="@dimen/size_8_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_delete_item">
            <TextView
                android:id="@+id/tv_day_count"
                tools:text="3 days"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/day_count_chip_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/btn_delete_item"
            android:src="@drawable/icn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/delete_archive_item_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>