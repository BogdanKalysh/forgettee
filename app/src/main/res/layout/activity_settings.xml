<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="?attr/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_64_dp"
        android:paddingHorizontal="@dimen/size_24_dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/size_48_dp"
            android:layout_height="@dimen/size_48_dp"
            android:src="@drawable/icn_back_arrow"
            android:background="@drawable/image_button_ripple"
            android:contentDescription="@string/menu"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="@dimen/toolbar_header_size"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="?attr/colorOnPrimary"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_app_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/app_theme"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="@dimen/settings_block_title_text_size"

        android:layout_margin="@dimen/size_24_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_theme_radio_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16_dp"
        app:layout_constraintTop_toBottomOf="@id/tv_app_theme">

        <TextView
            android:id="@+id/rb_light_theme"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_56_dp"
            android:gravity="center"
            android:text="@string/light"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/settings_radio_button_text_size"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginStart="@dimen/size_24_dp"
            android:background="@drawable/radio_button_unchecked_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rb_dark_theme"/>

        <TextView
            android:id="@+id/rb_dark_theme"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_56_dp"
            android:gravity="center"
            android:text="@string/dark"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/settings_radio_button_text_size"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginStart="@dimen/size_24_dp"
            android:background="@drawable/radio_button_unchecked_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/rb_light_theme"
            app:layout_constraintEnd_toStartOf="@id/rb_system_theme"/>

        <TextView
            android:id="@+id/rb_system_theme"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_56_dp"
            android:gravity="center"
            android:text="@string/system"
            android:textColor="@color/theme_red"
            android:textSize="@dimen/settings_radio_button_text_size"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginHorizontal="@dimen/size_24_dp"
            android:background="@drawable/radio_button_checked_background"
            app:layout_constraintStart_toEndOf="@id/rb_dark_theme"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_task_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/task_settings"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="@dimen/settings_block_title_text_size"

        android:layout_marginTop="@dimen/size_32_dp"
        android:layout_marginStart="@dimen/size_24_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_theme_radio_buttons" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_add_task_position_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_task_settings">

        <TextView
            android:id="@+id/tv_add_task_position_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@string/add_to_the_end_description"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/settings_item_description_text_size"

            android:layout_marginStart="@dimen/size_24_dp"
            android:layout_marginEnd="@dimen/size_8_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sw_add_task_position_setting"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_add_task_position_setting"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:layout_marginEnd="22dp"

            app:thumbTint="?attr/colorSecondaryVariant"
            app:trackTint="@color/switch_track_background"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_archive_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/archive_settings"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="@dimen/settings_block_title_text_size"

        android:layout_marginTop="@dimen/size_32_dp"
        android:layout_marginStart="@dimen/size_24_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_add_task_position_setting" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_time_format_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16_dp"
        app:layout_constraintTop_toBottomOf="@id/tv_archive_settings">
        <TextView
            android:id="@+id/tv_time_format_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@string/use_24_format_description"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/settings_item_description_text_size"

            android:layout_marginStart="@dimen/size_24_dp"
            android:layout_marginEnd="@dimen/size_8_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sw_time_format_setting"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_time_format_setting"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:layout_marginEnd="22dp"

            app:thumbTint="?attr/colorSecondaryVariant"
            app:trackTint="@color/switch_track_background"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>