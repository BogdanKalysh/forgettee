<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/size_24_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_date"
        tools:text="26 Jan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16_dp"
        android:textSize="@dimen/day_separator_text_size"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/theme_red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <FrameLayout
        android:id="@+id/container_week_day_chip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_24_dp"
        android:background="@drawable/chip_weekday_background"
        android:paddingHorizontal="@dimen/size_8_dp"
        app:layout_constraintTop_toTopOf="@id/tv_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_date"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_weekday"
            tools:text="monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/day_separator_text_size"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/theme_red"
            android:layout_gravity="center"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>