<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="?attr/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_64_dp"
        android:paddingHorizontal="@dimen/size_24_dp"

        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/toolbar_header_size"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="?attr/colorOnPrimary"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="@dimen/size_48_dp"
            android:layout_height="@dimen/size_48_dp"
            android:src="@drawable/icn_dots"
            android:background="@drawable/image_button_ripple"
            android:contentDescription="@string/menu"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_todo_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/cl_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="@dimen/size_64_dp"
        android:layout_height="@dimen/size_64_dp"
        app:tint="@color/theme_red"
        android:src="@drawable/icn_plus_sign"
        android:background="@drawable/image_button_ripple"
        android:contentDescription="@string/add_todo_item"

        android:layout_margin="@dimen/size_24_dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/dimmer"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_menu"
        android:layout_width="@dimen/size_160_dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_marginEnd="@dimen/size_24_dp"
        app:layout_constraintTop_toBottomOf="@id/cl_toolbar"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btn_archive"

            android:text="@string/archive_descriptor"

            android:textAllCaps="false"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/size_16_dp"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/menu_button_text_size"
            android:background="@drawable/button_secondary_top_ripple"
            android:textColor="?attr/colorOnSecondary"

            android:layout_width="0dp"
            android:layout_height="@dimen/size_56_dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_change_theme"

            android:text="@string/change_theme"

            android:textAllCaps="false"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/size_16_dp"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="@dimen/menu_button_text_size"
            android:background="@drawable/button_secondary_bottom_ripple"
            android:textColor="?attr/colorOnSecondary"

            android:layout_width="0dp"
            android:layout_height="@dimen/size_56_dp"
            android:layout_marginTop="-1dp"

            app:layout_constraintTop_toBottomOf="@id/btn_archive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
